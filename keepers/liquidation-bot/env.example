MEZO_RPC_URL=https://rpc.test.mezo.org
KEEPER_PRIVATE_KEY=0xabc123...  # Default path: small hot key. Clear to use UNLOCKED_RPC_URL.
# Optional unlocked RPC signer (e.g., local node with eth_sendTransaction + unlocked account). Requires KEEPER_ADDRESS and KEEPER_PRIVATE_KEY to be empty.
UNLOCKED_RPC_URL=
KEEPER_ADDRESS=0x...

# Optional JSON config (relative to bot dir)
CONFIG_PATH=../configs/addresses.testnet.json
NETWORK=mezo-testnet

# Required contract addresses
TROVE_MANAGER_ADDRESS=0x...
SORTED_TROVES_ADDRESS=0x...
LIQUIDATION_ENGINE_ADDRESS=0x...
PRICE_FEED_ADDRESS=0x...

# Discovery bounds
MAX_TROVES_TO_SCAN_PER_RUN=500
MAX_TROVES_PER_JOB=20
EARLY_EXIT_SCAN_THRESHOLD=50

# Price sanity (1e18 units; e.g., 42000 USD => 42000e18)
MIN_BTC_PRICE=0
MAX_BTC_PRICE=0
MAX_PRICE_AGE_SECONDS=0

# Mode
DRY_RUN=true

# Tx safety
MAX_TX_RETRIES=2
MAX_FEE_PER_GAS=
MAX_PRIORITY_FEE_PER_GAS=
MAX_NATIVE_SPENT_PER_RUN=
MAX_GAS_PER_JOB=
GAS_BUFFER_PCT=20

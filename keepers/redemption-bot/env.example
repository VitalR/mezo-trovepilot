# --- Network / RPC ---
NETWORK=mezo-testnet
MEZO_RPC_URL=
# Optional: unlocked RPC signer
UNLOCKED_RPC_URL=
KEEPER_ADDRESS=
# Default signer
KEEPER_PRIVATE_KEY=

# --- Contracts (required) ---
TROVE_PILOT_ENGINE_ADDRESS=
HINT_HELPERS_ADDRESS=
SORTED_TROVES_ADDRESS=
PRICE_FEED_ADDRESS=
MUSD_ADDRESS=

# --- Redemption parameters (operator-driven MVP) ---
# Requested amount of MUSD to attempt to redeem. 0 => no-op.
REDEEM_MUSD_AMOUNT=0
# Optional per-run chunk cap (min(truncated, maxChunk)). 0 => disabled.
REDEEM_MAX_CHUNK_MUSD=0
# Max iterations passed to core; keep bounded to avoid OOG.
MAX_ITERATIONS=50
# If true, skip execution when truncated != requested (safer but more conservative).
STRICT_TRUNCATION=false

# Insert-position seed hints (optional). If unset, bot derives deterministic seeds from tail scan.
UPPER_SEED=0
LOWER_SEED=0
SEED_SCAN_WINDOW=10

# --- Allowance / approval controls ---
AUTO_APPROVE=false
# Safer default: approve exactly the effective amount (not MaxUint256).
APPROVE_EXACT=true

# --- Fee / gas / spend safety ---
DRY_RUN=true
CONFIRM=false
MAX_TX_RETRIES=2
MIN_KEEPER_BALANCE_WEI=0
MAX_FEE_PER_GAS=0
MAX_PRIORITY_FEE_PER_GAS=0
MAX_NATIVE_SPENT_PER_RUN=0
MAX_GAS_PER_TX=0
GAS_BUFFER_PCT=20
